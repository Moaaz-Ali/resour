without_gnbd ?= @DISABLE_GNBD@
without_rgmanager ?= @DISABLE_RGMANAGER@

THISDIR = $(shell echo $(CURDIR) | sed -e 's|$(OBJDIR)/||g')
S=$(SRCDIR)/$(THISDIR)

CONFDIR=@CONFDIR@
CONFFILE=@CONFFILE@

UNINSTALL = @SRCDIR@/scripts/uninstall.pl
FENCEPARSE = @SRCDIR@/scripts/fenceparse
