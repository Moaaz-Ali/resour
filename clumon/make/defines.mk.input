#Install Locations
sbindir ?= ${DESTDIR}/@SBINDIR@
mandir ?= ${DESTDIR}/@MANDIR@
libdir ?= ${DESTDIR}/@LIBDIR@
incdir ?= ${DESTDIR}/@INCDIR@
sharedir ?= ${DESTDIR}/@SHAREDIR@
pegasus_providers_dir ?= ${DESTDIR}/@PEGASUS_PROVIDERS_DIR@

# architecture
arch ?= @ARCH@

# Where's the kernel?
KERNEL_SRC = @KERNEL_SRC@

# C Compiler defaults
CC = @CC@
CXX = @CXX@

STRIP = strip
AR = ar
LD = ld
#RANLIB = echo
RANLIB = ranlib

# Default CFLAGS
CFLAGS += -g -fPIC -Wall -Wno-unused ${INCLUDE}
CXXFLAGS += -g -fPIC -Wall -Wno-unused ${INCLUDE}

