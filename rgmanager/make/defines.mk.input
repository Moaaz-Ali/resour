#Install Locations
sbindir ?= ${DESTDIR}/@SBINDIR@
mandir ?= ${DESTDIR}/@MANDIR@
libdir ?= ${DESTDIR}/@LIBDIR@
incdir ?= ${DESTDIR}/@INCDIR@
sharedir ?= ${DESTDIR}/@SHAREDIR@

# Where's the kernel?
KERNEL_SRC = @KERNEL_SRC@

# C Compiler defaults
CC = @CC@

STRIP = strip
AR = ar
LD = ld
#RANLIB = echo
RANLIB = ranlib

# Default CFLAGS
CFLAGS += -DSHAREDIR=\"@SHAREDIR@\" -Wall -Werror -Wstrict-prototypes -Wshadow ${INCLUDE}

