%define package @PACKAGE@
%define version @VERSION@
%define release 1

#
# Red Hat Resource Group Manager RPM spec file.
# 
Summary: Open Source HA Resource Group Failover for Red Hat Enterprise Linux
Name: %{rgmanager}
Version: %{version}
Release: %{release}
License: GPL,LGPL
Group: System Environment/Base
Source: %{name}-%{version}.tar.gz
Buildroot: %{_tmppath}/%{name}-%{version}-buildroot
Requires: chkconfig initscripts glibc ncurses libxml2 bash grep sed gawk
Requires: magma
Requires: net-tools mount /sbin/findfs
Provides: rgmanager
BuildPrereq: glibc-devel ncurses-devel libxml2-devel sed bash /bin/grep
BuildPrereq: magma

%description
Red Hat Resource Group Manager provides high availability of critical server
applications in the event of planned or unplanned system downtime.

%prep
%setup -q
%configure

%build
make

%install
%makeinstall

%clean
rm -rf $RPM_BUILD_ROOT

%files
%defattr(-,root,root)
%doc README AUTHORS COPYING
/usr/share/rgmanager/*
/usr/sbin/*

%post

%preun

%postun

%changelog
