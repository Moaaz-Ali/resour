#!/bin/sh

echo "configure cman-kernel"
(cd cman-kernel; ./configure $@)

echo "configure dlm-kernel"
(cd dlm-kernel; ./configure $@)

echo "configure gfs-kernel"
(cd gfs-kernel; ./configure $@)

echo "configure gnbd-kernel"
(cd gnbd-kernel; ./configure $@)

echo "configure magma"
(cd magma; ./configure $@)

echo "configure ccs"
(cd ccs; ./configure $@)

echo "configure cman"
(cd cman; ./configure $@)

echo "configure dlm"
(cd dlm; ./configure $@)

echo "configure fence"
(cd fence; ./configure $@)

echo "configure iddev"
(cd iddev; ./configure $@)

echo "configure gfs"
(cd gfs; ./configure $@)

echo "configure gnbd"
(cd gnbd; ./configure $@)

echo "configure gulm"
(cd gulm; ./configure $@)

echo "configure magma-plugins"
(cd magma-plugins; ./configure $@)
