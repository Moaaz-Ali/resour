  print "         This code will have no mercy for your data and your machines. You have been warned!\n";
  print "\n********************************************************************************************\n";
  $cflags="${cflags} -DEXPERIMENTAL_BUILD";
}
if (!$enable_xen) {
  $enable_xen="";
}
if (!$without_ccs) {
  $without_ccs="";
}
if (!$without_cman) {
  $without_cman="";
}
if (!$without_dlm) {
  $without_dlm="";
