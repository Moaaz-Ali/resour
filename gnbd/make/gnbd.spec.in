%define vers @VERS@
%define rel @REL@

Name: gnbd
Version: %vers
Release: %rel
License: GPL
Group: System Environment/Kernel
Summary: gnbd - GFS's Network Block Device
BuildRequires: magma-devel
BuildRequires: gnbd-kernheaders >= 2.6.9
Conflicts: GFS <= 6.0
Conflicts: GFS-modules
Requires: magma-plugins
Requires: gnbd-kernel >= 2.6.9

Source0: %{name}-%{version}-%{release}.tar.gz

BuildRoot: %{_tmppath}/%{name}-%{version}-%{release}-buildroot

%description
gnbd - GFS's Network Block Device

%prep
%setup -q -n %{name}-%{version}-%{release}

%build
./configure --mandir=%{_mandir}
make

%install
rm -rf $RPM_BUILD_ROOT
make install DESTDIR=$RPM_BUILD_ROOT

%clean
rm -rf $RPM_BUILD_ROOT

%files
%defattr(-,root,root,-)
/sbin/gnbd_recvd
/sbin/gnbd_monitor
/sbin/gnbd_serv
/sbin/gnbd_clusterd
/sbin/fence_gnbd
/sbin/gnbd_export
/sbin/gnbd_import
%doc
%{_mandir}

