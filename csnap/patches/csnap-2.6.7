+static struct target_type csnapshot = {
+	.name = "csnapshot",
+	.version = {0, 0, 0},
+	.module = THIS_MODULE,
+	.ctr = csnap_create,
+	.dtr = csnap_destroy,
+	.map = csnap_map,
+	.status = csnap_status,
+};
