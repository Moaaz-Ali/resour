+static int get_control_socket(char *sockname)
+{
+	mm_segment_t oldseg = get_fs();
+	struct sockaddr_un addr = { .sun_family = AF_UNIX };
+	int addr_len = sizeof(addr) - sizeof(addr.sun_path) + strlen(sockname);
+	int sock = sys_socket(AF_UNIX, SOCK_STREAM, 0), err = 0;
+
+	warn("Connect to control socket %s", sockname);
+	if (sock <= 0)
+		return sock;
+	strncpy(addr.sun_path, sockname, sizeof(addr.sun_path));
+	if (sockname[0] == '@')
+		addr.sun_path[0] = 0;
+
+	set_fs(get_ds());
+	while ((err = sys_connect(sock, (struct sockaddr *)&addr, addr_len)) == -111)
+		break;
+//		yield();
+	set_fs(oldseg);
+
+	return err? err: sock;
+}
