#Install Locations
sbindir ?= ${DESTDIR}/@SBINDIR@
mandir ?= ${DESTDIR}/@MANDIR@
libdir ?= ${DESTDIR}/@LIBDIR@
ccslibdir ?= ${DESTDIR}/@CCSLIBDIR@
incdir ?= ${DESTDIR}/@INCDIR@
ccsincdir ?= ${DESTDIR}/@CCSINCDIR@

# Where's the kernel?
KERNEL_SRC = @KERNEL_SRC@

# C Compiler defaults
CC = @CC@

STRIP = strip
AR = ar
LD = ld
#RANLIB = echo
RANLIB = ranlib

# Default CFLAGS
CFLAGS += -Wall ${INCLUDE}

YACC = bison
YFLAGS = -y -d
LEX = flex
LFLAGS = -i -t

