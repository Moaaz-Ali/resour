%define vers @VERS@
%define rel @REL@

Name: magma-plugins
Version: %{vers}
Release: %{rel}
License: GPL
Group: System Environment/Libraries
Summary: Cluster manager plugins for magma
BuildRequires: cman-kernheaders dlm-kernheaders gulm-devel dlm-devel
Requires: magma

Source0: %{name}-%{version}-%{release}.tar.gz

BuildRoot: %{_tmppath}/%{name}-%{version}-%{release}-buildroot

%description
Cluster manager plugins for magma

%prep
%setup -q -n %{name}-%{version}-%{release}

%build
export PATH=/usr/bin:/usr/sbin:/bin:/sbin
./configure --plugindir=`magma_tool config plugindir` --mandir=%{_mandir}
make

%install
rm -rf $RPM_BUILD_ROOT
make install DESTDIR=$RPM_BUILD_ROOT

%clean
rm -rf $RPM_BUILD_ROOT

%files
%defattr(-,root,root,-)
%{_libdir}/magma/plugins
%doc


