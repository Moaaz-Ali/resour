# Add lock harness to the build system.
diff -urN -p linux-2.6.10/fs/Kconfig linux/fs/Kconfig
--- linux-2.6.10/fs/Kconfig	2005-01-03 17:26:13.000000000 -0600
+++ linux/fs/Kconfig	2005-01-12 17:18:27.316359974 -0600
@@ -1810,6 +1810,14 @@ config AFS_FS
 config RXRPC
 	tristate
 
+config LOCK_HARNESS
+	tristate "GFS Lock Harness"
+	help
+	  The module that connects GFS to the modules that provide
+	  locking for GFS.
+
+	  If you want to use GFS (a cluster filesystem) say Y here.
+
 endmenu
 
 menu "Partition Types"
diff -urN -p linux-2.6.10/fs/Makefile linux/fs/Makefile
--- linux-2.6.10/fs/Makefile	2005-01-03 17:26:13.000000000 -0600
+++ linux/fs/Makefile	2005-01-12 17:18:27.317359749 -0600
@@ -94,3 +94,4 @@ obj-$(CONFIG_AFS_FS)		+= afs/
 obj-$(CONFIG_BEFS_FS)		+= befs/
 obj-$(CONFIG_HOSTFS)		+= hostfs/
 obj-$(CONFIG_HPPFS)		+= hppfs/
+obj-$(CONFIG_LOCK_HARNESS)	+= gfs_locking/
