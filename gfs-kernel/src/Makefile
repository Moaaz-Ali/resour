patches:
	cd gfs && ${MAKE} patches
	cd harness && ${MAKE} patches
	cd nolock && ${MAKE} patches
	cd dlm && ${MAKE} patches
	cd gulm && ${MAKE} patches

clean:
	rm -rf *.patch linux-patched


